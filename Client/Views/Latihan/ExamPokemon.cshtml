@{
    ViewData["Title"] = "Exam 2";
    Layout = "_LayoutDashboard";
}

<h2>Exam 2</h2>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
